procedure MoverDerecha(){
    Sacar(Rojo)
    Mover(Este)
    Poner(Rojo)
    if(hayBolitas(Azul)){
        Sacar(Rojo)
        { BOOM("Has chocado con una mina") }
    }elseif(hayBolitas(Negro)){
        Sacar(Rojo)
        { BOOM("Has chocado con un anzuelo y te han pescado") }
    }elseif(hayBolitas(Verde)){
        Sacar(Rojo)
        Poner(Verde)
    }
}

