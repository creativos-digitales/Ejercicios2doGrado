procedure MoverDerecha(){
    Sacar(Rojo)
    Mover(Este)
    Poner(Rojo)
    if(hayBolitas(Verde)){
        Sacar(Rojo)
        { BOOM("Te has chocado una roca") }
    }elseif(hayBolitas(Azul)){
        Sacar(Azul)
    }
}

